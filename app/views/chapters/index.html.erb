<h1>Listing chapters</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Published</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @chapters.each do |chapter| %>
  <tr>
    <td><%= chapter.title %></td>
    <td><%= chapter.body %></td>
    <td><%= chapter.published %></td>
    <td><%= link_to 'Show', [chapter.book, chapter] %></td>
    <td><%= link_to 'Edit', edit_book_chapter_path(chapter.book, chapter) %></td>
    <td><%= link_to 'Destroy', [chapter.book, chapter], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

