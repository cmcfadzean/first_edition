<%= component "container", size: "lg" do %>
  <%= component "breadcrumbs" do %>
    <strong><%= link_to 'My Books', new_book_path %></strong>
  <% end %>
  <%= component "title", text: "My Books" %>
<% end %>

<table>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.genre %></td>
        <td><%= book.published %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>New Book</h1>

<%= render 'form', book: @book %>
