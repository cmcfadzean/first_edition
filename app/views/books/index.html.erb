<% content_for :actions do %>
  <%= link_to 'New Book', new_book_path, class: "btn btn-dark btn-sm" %>
<% end %>
<%= component "breadcrumbs" do %>
  <strong><%= link_to 'My Books', books_path %></strong>
<% end %>
<%= component "title", text: "My Books" %>
<%= component "shelf" do %>
  <% @books.each do |book| %>
    <%= component "cover", url: edit_book_path(book), title: book.title, genre: book.genre, published: book.published, author: book.user.name %>
  <% end %>
<% end %>
<%= component "subtitle", text: "Library" %>
<%= component "shelf" do %>
  <% @library.each do |book| %>
    <%= component "cover", url: book_path(book), title: book.title, genre: book.genre, published: book.published, author: book.user.name %>
  <% end %>
<% end %>
